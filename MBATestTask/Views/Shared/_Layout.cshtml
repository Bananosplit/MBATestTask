<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MBATestTask</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MBATestTask.styles.css" asp-append-version="true"/>
</head>

<body style=" background: #eeedec;
              letter-spacing: 0.2em;
              font-size: 1.2em;">

<div class="container my-5 mx-auto">

    <h1 class="text-muted text-center my-4">Weather App</h1>

    <form method="post" asp-action="WeatherDataUpdate" class="change-location my-4 text-center text-muted">
        <label for="city" class="p-2">Enter a location for weather information</label>
        <input type="text" name="city" class="form-control p-2">
        <label for="date" class="p-2">Enter data, weather have you get</label>
        <input type="datetime-local" name="date" class="form-control p-2">
    </form>

    <div class="card shadow-lg rounded">
        <img src="https://via.placeholder.com/400x300" class="time card-img-top">
        <div class="icon bg-light mx-auto text-center">
            <!-- icon here later -->
        </div>
        <div class="text-muted text-uppercase text-center details">
            <h5 class="my-3">City name</h5>
            <div class="my-3">Weather condition</div>
            <div class="display-4 my-4">
                <span>temp</span>
                <span>&deg;C</span>
            </div>
        </div>
    </div>

</div>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>